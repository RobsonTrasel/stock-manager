{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@shared/*": ["../shared/*"],
      "@errors/*": ["../shared/errors/*"],
      "@interfaces/*": ["../shared/interfaces/*"],
      "@utils/*": ["../shared/utils/*"]
    },
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true   
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}